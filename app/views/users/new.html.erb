<%= form_for(@user) do |f| %>
      <%= f.label :昵称 %>
      <%= f.text_field :name %>

      <%= f.label :邮箱 %>
      <%= f.email_field :email %>

      <%= f.label :密码 %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "确认密码" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "创建账号" %>
    <% end %>
